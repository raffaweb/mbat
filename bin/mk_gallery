#!/bin/bash

convert $1 -thumbnail x200 -resize '200x<' -resize 50% -gravity center -crop 100x100+0+0 +repage -format jpg -quality 91 t/$1

cat <<EOF
<a href="http://mbat.taluci.it/assets/img/gallery/$1" title="$1" data-gallery>
   <img src="http://mbat.taluci.it/assets/img/gallery/t/$1" alt="$1">
</a>
EOF
